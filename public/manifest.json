{
    "manifest_version": 2,
    "name": "Screen Recorder",
    "description": "Record your screen with this simple Chrome Extension.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "desktopCapture"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}